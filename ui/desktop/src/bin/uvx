#!/bin/bash

# Enable strict mode to exit on errors and unset variables
set -euo pipefail

# Set log file
LOG_FILE="/tmp/mcp.log"

# Clear the log file at the start
> "$LOG_FILE"

# Function for logging
log() {
    local MESSAGE="$1"
    echo "$(date +'%Y-%m-%d %H:%M:%S') - $MESSAGE" | tee -a "$LOG_FILE" >&2
}

# Trap errors and log them before exiting
trap 'log "An error occurred. Exiting with status $?."' ERR

log "Starting uvx setup script."

# Ensure ~/.config/mts/mcp-hermit/bin exists
log "Creating directory ~/.config/mts/mcp-hermit/bin if it does not exist."
mkdir -p ~/.config/mts/mcp-hermit/bin

# Change to the ~/.config/mts/mcp-hermit directory
log "Changing to directory ~/.config/mts/mcp-hermit."
cd ~/.config/mts/mcp-hermit

# Check if hermit binary exists and download if not
if [ ! -f ~/.config/mts/mcp-hermit/bin/hermit ]; then
    log "Hermit binary not found. Downloading hermit binary."
    curl -fsSL "https://github.com/cashapp/hermit/releases/download/stable/hermit-$(uname -s | tr '[:upper:]' '[:lower:]')-$(uname -m | sed 's/x86_64/amd64/' | sed 's/aarch64/arm64/').gz" \
        | gzip -dc > ~/.config/mts/mcp-hermit/bin/hermit && chmod +x ~/.config/mts/mcp-hermit/bin/hermit
    log "Hermit binary downloaded and made executable."
else
    log "Hermit binary already exists. Skipping download."
fi


log "setting hermit cache to be local for MCP servers"
mkdir -p ~/.config/mts/mcp-hermit/cache
export HERMIT_STATE_DIR=~/.config/mts/mcp-hermit/cache

# Update PATH
export PATH=~/.config/mts/mcp-hermit/bin:$PATH
log "Updated PATH to include ~/.config/mts/mcp-hermit/bin."


# Verify hermit installation
log "Checking for hermit in PATH."
which hermit >> "$LOG_FILE"

# Initialize hermit
log "Initializing hermit."
hermit init >> "$LOG_FILE"

# Initialize python >= 3.10
log "hermit install python 3.10"
hermit install python3@3.10 >> "$LOG_FILE"

# Install UV for python using hermit
log "Installing UV with hermit."
hermit install uv >> "$LOG_FILE"

# Verify installations
log "Verifying installation locations:"
log "hermit: $(which hermit)"
log "uv: $(which uv)"
log "uvx: $(which uvx)"


log "Checking for MTS_UV_REGISTRY environment variable for custom python/pip/UV registry setup..."
# Check if MTS_UV_REGISTRY is set and accessible
if [ -n "${MTS_UV_REGISTRY:-}" ] && curl -s --head --fail "$MTS_UV_REGISTRY" > /dev/null; then
    log "Checking custom mts registry availability: $MTS_UV_REGISTRY"
    log "$MTS_UV_REGISTRY is accessible, setting it as UV_INDEX_URL. Setting UV_NATIVE_TLS to true."
    export UV_INDEX_URL="$MTS_UV_REGISTRY"
    export UV_NATIVE_TLS=true
else
    log "Neither MTS_UV_REGISTRY nor UV_INDEX_URL is set. Falling back to default configuration."
fi

# Final step: Execute uvx with passed arguments
log "Executing 'uvx' command with arguments: $*"
uvx "$@" || log "Failed to execute 'uvx' with arguments: $*"

log "uvx setup script completed successfully."
